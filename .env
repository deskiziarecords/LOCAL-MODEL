# ========================================
# FILE 1: .env.example
# ========================================
# Copy this to .env and customize for your setup

# ========== MODEL SETTINGS ==========
# Path where GGUF model files are stored
MODEL_PATH=./models

# Default model to load on startup
DEFAULT_MODEL=mistral-7b

# GPU layer count (-1 = all layers on GPU, 0 = CPU only)
GPU_LAYERS=-1

# Maximum tokens to generate
MAX_TOKENS=2048

# Temperature for generation (0.0-2.0, higher = more creative)
TEMPERATURE=0.7

# Top-P for sampling (0.0-1.0)
TOP_P=0.9

# ========== API SETTINGS ==========
# API server host
API_HOST=127.0.0.1

# API server port
API_PORT=8000

# API key for authentication
API_KEY=your-secret-key-here

# ========== FEATURE FLAGS ==========
# Enable web search capability
ENABLE_WEB_SEARCH=false

# Enable memory/chat history
ENABLE_MEMORY=true

# Enable embeddings endpoint
ENABLE_EMBEDDINGS=false

# ========== GUI SETTINGS ==========
# Enable GUI interface
ENABLE_GUI=true

# GUI theme: auto, light, dark
GUI_THEME=auto

# ========== LOGGING SETTINGS ==========
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/app.log

# Max log file size in bytes (10MB default)
LOG_MAX_BYTES=10485760

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# ========== CHAT HISTORY ==========
# Enable automatic chat history saving
CHAT_HISTORY_ENABLED=true

# Chat history file path
CHAT_HISTORY_FILE=chat_history.json

# ========== PERFORMANCE ==========
# Request timeout in seconds
REQUEST_TIMEOUT=300

# Max worker threads
MAX_WORKERS=2

# ========== DEVELOPMENT ==========
# Enable debug mode
DEBUG=false


